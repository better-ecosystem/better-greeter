<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />

  <!-- The UI structure for Better Greeter must contain certain objects. -->

  <!-- 1. <object class="GtkWindow" id="greeter-window"> -->
  <!-- 2. <object class="" -->

  <object class="GtkWindow" id="greeter-window">

    <property name="title">Better Greeter</property>
    <property name="name">greeter-window</property>

    <property name="fullscreened">true</property>
    <child>

      <object class="GtkBox" id="greeter-container">

        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="visible">true</property>

        <child>

          <object class="GtkLabel" id="greeter-clock">

            <property name="name">greeter-clock</property>
            <property name="margin-top">10</property>
            <property name="halign">center</property>
            <property name="valign">start</property>
            <property name="vexpand">true</property>
            <property name="label">00:00</property>
          </object>
        </child>

        <child>

          <object class="GtkBox" id="greeter-login-container">

            <property name="orientation">vertical</property>
            <property name="halign">center</property>
            <property name="valign">center</property>
            <property name="vexpand">true</property>

            <child>

              <object class="GtkDrawingArea" id="greeter-pfp">

                <property name="halign">center</property>
                <property name="valign">start</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
              </object>
            </child>

            <child>

              <object class="GtkBox" id="greeter-username-container">

                <property name="halign">center</property>
                <property name="valign">start</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="spacing">20</property>

                <child>

                  <object class="GtkLabel" id="greeter-username">

                    <property name="name">greeter-username</property>
                    <property name="halign">center</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>

                <child>

                  <object class="GtkButton" id="greeter-switch-username">

                    <property name="name">greeter-username-switch-buttton</property>
                    <property name="hexpand">true</property>
                    <property name="halign">end</property>

                    <child>

                      <object class="GtkImage" id="greeter-switch-username-img">

                        <property name="icon-name">media-playback-start</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>